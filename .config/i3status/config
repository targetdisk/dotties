# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
    colors = true
    interval = 5
    color_good = "#9ece9e"
    color_degraded = "#f0dfaf"
    color_bad = "#e89393"
}

order += "ipv6"
order += "disk /"
order += "disk /home"
order += "disk /mnt/balls"
order += "disk /mnt/ss500"
order += "/home/anon/fuse/butter-anon"
order += "/home/anon/fuse/sto"
order += "disk /mnt/2tb"
order += "disk /mnt/5tb"
order += "disk /mnt/snot"
order += "disk /mnt/psp"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
#order += "load"
order += "memory"
order += "tztime zeal"
order += "tztime berlin"
order += "tztime utc"
order += "tztime pacific"
order += "tztime local"

wireless _first_ {
    format_up = "W%quality \"%essid\" %ip"
    format_down = "W down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E %ip %speed"
    format_down = "E down"
}

battery all {
    format = "%status %percentage %remaining"
}

tztime local {
    format = "%m/%d/%y %I:%M%P"
}

tztime zeal {
    format = "NZ: %I:%M%P"
    timezone = "NZ"
}

tztime berlin {
    format = "Berlin: %I:%M%P"
    timezone = "Europe/Berlin"
}

tztime utc {
    format = "UTC: %I:%M%P"
    timezone = "UTC"
}

tztime pacific {
    format = "Pacific: %I:%M%P"
    timezone = "US/Pacific"
}

load {
    format = "%1min"
}

memory {
    format = "U:%used A:%available"
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
}

disk "/" {
    format = "/ %avail"
}

disk "/home" {
    format = "/home %avail"
}

disk "/mnt/2tb" {
    format = "/mnt/2tb %avail"
}

disk "/mnt/5tb" {
    format = "/mnt/5tb %avail"
}

disk "/home/anon/fuse/butter-anon" {
    format = "~/butter %avail"
}

disk "/home/anon/fuse/sto" {
    format = "~/sto %avail"
}

disk "/mnt/snot" {
    format = "/mnt/snot %avail"
}

disk "/" {
    format = "/ %avail"
}

disk "/mnt/psp" {
    format = "/mnt/psp %avail"
}
